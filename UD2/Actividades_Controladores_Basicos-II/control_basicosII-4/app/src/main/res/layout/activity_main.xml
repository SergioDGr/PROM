<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preguntas"
            android:background="@color/design_default_color_primary"
            android:textColor="@color/white"
            android:padding="10sp"
            android:paddingVertical="12dp"
            android:textSize="25sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pregunta1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rdbPrg1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="respuesta 1"/>
                <RadioButton
                    android:id="@+id/rdbPrg1_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="respuesta 2"/>
                <RadioButton
                    android:id="@+id/rdbPrg1_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="respuesta 3"/>

            </RadioGroup>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pregunta2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <RadioGroup

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rdbPrg2_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="respuesta 1"/>
                <RadioButton
                    android:id="@+id/rdbPrg2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="respuesta 2"/>
                <RadioButton
                    android:id="@+id/rdbPrg2_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="respuesta 3"/>

            </RadioGroup>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pregunta3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rdbPrg3_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="respuesta 1"/>
                <RadioButton
                    android:id="@+id/rdbPrg3_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="respuesta 2"/>
                <RadioButton
                    android:id="@+id/rdbPrg3_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="respuesta 3"/>

            </RadioGroup>
        </LinearLayout><TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pregunta4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rdbPrg4_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="respuesta 1"/>
                <RadioButton
                    android:id="@+id/rdbPrg4_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="respuesta 2"/>
                <RadioButton
                    android:id="@+id/rdbPrg4_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="respuesta 3"/>

            </RadioGroup>
        </LinearLayout>
        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar"/>
        <TextView
            android:id="@+id/txtError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>