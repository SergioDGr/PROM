<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ficheros1"
            android:background="@color/design_default_color_primary"
            android:textColor="@color/white"
            android:padding="10sp"
            android:paddingVertical="12dp"
            android:textSize="25sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contenido a escribir:"
            android:layout_margin="20dp"/>
        <EditText
            android:id="@+id/etFileContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp">
            <Button
                android:id="@+id/btnAddFicheroInterno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AÑADIR FICH. INT."/>
            <Button
                android:id="@+id/btnAddFicheroExterno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AÑADIR FICH. EXT."/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp">
            <Button
                android:id="@+id/btnLeerFicheroInterno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="LEER FICH. INT."/>
            <Button
                android:id="@+id/btnLeerFicheroExterno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="LEER FICH. EXT."/>
            <Button
                android:id="@+id/btnLeerRecurso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="LEER RECURSO"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp">
            <Button
                android:id="@+id/btnDelFicheroInterno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BORRAR FICH. INT."/>
            <Button
                android:id="@+id/btnDelFicheroExterno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BORRAR FICH. EXT."/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="El contenido del fichero es:"
            android:layout_marginHorizontal="20dp"/>

        <TextView
            android:id="@+id/tvVisualizarContenido"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="20dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>